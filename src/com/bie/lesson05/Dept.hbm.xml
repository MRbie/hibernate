<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.bie.lesson05">
	<class name="Dept" table="20171021_dept"> 
		<!-- 主键映射 -->
		<id name="deptId" column="deptId">
			<generator class="native"></generator>
		</id>
		<!-- 非主键映射 -->
		<property name="deptName" column="deptName" length="20"></property>
		
		<!-- 
			一对多关联映射配置，通过部门管理到员工
			Dept映射关键点：
				1：指定映射的集合属性："emps"
				2：集合属性对应的集合表："20171021_employee"
				3：集合表的外键字段"20171021_employee.deptId"
				4：集合元素的类型
		 -->
		 <set name="emps" table="20171021_employee">
		 	<!-- 集合表的外键字段 -->
		 	<key column="deptId"></key>
		 	<!-- 集合元素的类型 class=com.bie.lesson05.Employee-->
		 	<one-to-many class="Employee"/>
		 </set>
		 
	</class>


</hibernate-mapping>		
	